<Window x:Class="UserControl_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControl_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <local:LabledTextBox LabelText="Vorname:" HorizontalAlignment="Left" Height="25" Margin="26,31,0,0" VerticalAlignment="Top" Width="292"/>
        <local:LabledTextBox LabelText="Nachname:" HorizontalAlignment="Left" Height="25" Margin="26,67,0,0" VerticalAlignment="Top" Width="292"/>
        <local:LabledTextBox x:Name="textBoxAlter" LabelText="Alter:" TextBoxText="{Binding Value,ElementName=sliderWert}" HorizontalAlignment="Left" Height="25" Margin="26,106,0,0" VerticalAlignment="Top" Width="292"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="66,149,0,0" VerticalAlignment="Top" Width="252" RenderTransformOrigin="-3.022,3.569" Click="Button_Click"/>
        <Slider x:Name="sliderWert" Minimum="0" Maximum="100" HorizontalAlignment="Left" Margin="340,113,0,0" VerticalAlignment="Top" Width="221"/>
    </Grid>
</Window>
